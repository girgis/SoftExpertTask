<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.scanning.ui.PaymentMethodsFragment"
    android:background="#B3707070"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payment_methods_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/top_corner_rounded_white"
        android:padding="30dp"
        android:visibility="visible">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.333" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.666" />

        <TextView
            android:id="@+id/payment_methods_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/payment_methods"
            android:textSize="16sp"
            android:textColor="#090909"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/online_payment_btn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@+id/payment_methods_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_1"
            android:layout_marginEnd="6dp"
            android:background="@drawable/blue_rectangle"
            android:src="@drawable/icon_credit_card"
            android:layout_marginTop="6dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/online_payment_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/online_payment_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_1"
            android:text="@string/online_payment"
            android:textSize="12sp"
            android:textColor="#090909"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/credit_payment_btn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@+id/payment_methods_tv"
            app:layout_constraintStart_toStartOf="@id/guideline_1"
            app:layout_constraintEnd_toEndOf="@id/guideline_2"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg"
            android:src="@drawable/credit_card"
            android:layout_marginTop="6dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/credit_payment_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/credit_payment_btn"
            app:layout_constraintStart_toStartOf="@id/guideline_1"
            app:layout_constraintEnd_toEndOf="@id/guideline_2"
            android:text="@string/credit_payment"
            android:textSize="12sp"
            android:textColor="#090909"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/cash_payment_btn"
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@+id/payment_methods_tv"
            app:layout_constraintStart_toStartOf="@id/guideline_2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg"
            android:src="@drawable/cash"
            android:layout_marginTop="6dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/cash_payment_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/credit_payment_btn"
            app:layout_constraintStart_toStartOf="@id/guideline_2"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/cash_payment"
            android:textSize="12sp"
            android:textColor="#090909"
            android:visibility="gone"/>

        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cash_payment_lbl"
            android:layout_marginTop="6dp"
            android:background="@drawable/rounded_button_bg"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/next"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/top_corner_rounded_white"
        android:padding="30dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/payment_data_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/payment_data"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_data_title"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            android:text="@string/owner_name"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
        
        <EditText
            android:id="@+id/owner_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/owner_name"
            android:layout_marginTop="8dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/rounded_light_gray_with_border_bg"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="6dp"
            android:hint="@string/card_name"
            android:textColor="#3A3A3A"
            android:textColorHint="#3A3A3A"/>

        <TextView
            android:id="@+id/card_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/owner_name_et"
            android:layout_marginStart="6dp"
            android:layout_marginTop="24dp"
            android:text="@string/card_number"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/owner_card_number_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_number_tv"
            android:layout_marginTop="8dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/rounded_light_gray_with_border_bg"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="6dp"
            android:hint="0000  0000  0000  0000"
            android:inputType="number"
            android:textColor="#3A3A3A"
            android:textColorHint="#3A3A3A"
            android:drawableEnd="@drawable/master_logo"/>

        <TextView
            android:id="@+id/ccv_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/owner_card_number_et"
            android:layout_marginStart="6dp"
            android:layout_marginTop="24dp"
            android:text="@string/ccv_number"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ccv_number_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/guideline_11"
            app:layout_constraintTop_toBottomOf="@+id/ccv_number_tv"
            android:layout_marginTop="8dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/rounded_light_gray_with_border_bg"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="6dp"
            android:hint=""
            android:textColor="#3A3A3A"
            android:textColorHint="#3A3A3A" />

        <TextView
            android:id="@+id/expire_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/guideline_11"
            app:layout_constraintTop_toBottomOf="@+id/owner_card_number_et"
            android:layout_marginStart="6dp"
            android:layout_marginTop="24dp"
            android:text="@string/ccv_number"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/expire_date_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/guideline_11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ccv_number_tv"
            android:layout_marginTop="8dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/rounded_light_gray_with_border_bg"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="6dp"
            android:hint=""
            android:textColor="#3A3A3A"
            android:textColorHint="#3A3A3A" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <Button
            android:id="@+id/confirm_card_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expire_date_et"
            android:layout_marginTop="18dp"
            android:background="@drawable/rounded_button_bg"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/next"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/loading_layout"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>