<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.profile.ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userName_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/userName_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="6dp"
            android:src="@drawable/fi_rr_user"
            android:background="@drawable/p_username_bg"/>

        <TextView
            android:id="@+id/userName_txt_value_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/userName_arrow_iv"
            app:layout_constraintStart_toEndOf="@+id/userName_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="#4953DD"
            android:textSize="14sp"
            android:gravity="start"/>

        <TextView
            android:id="@+id/userName_txt_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/userName_iv"
            app:layout_constraintEnd_toStartOf="@+id/userName_arrow_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/userName_txt_value_tv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#717171"
            android:textSize="10sp"
            android:text="@string/user_hint"/>

        <ImageView
            android:id="@+id/userName_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/language_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rotationY="180"
            android:visibility="invisible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/email_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userName_cl"
        android:padding="16dp"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/email_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="6dp"
            android:src="@drawable/fi_rr_envelope"
            android:background="@drawable/lang_bg"/>

        <TextView
            android:id="@+id/email_txt_value_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/email_iv"
            app:layout_constraintEnd_toStartOf="@+id/email_arrow_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="#4953DD"
            android:textSize="14sp"
            android:text=""
            android:gravity="start"/>

        <TextView
            android:id="@+id/email_txt_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/email_iv"
            app:layout_constraintEnd_toStartOf="@+id/email_arrow_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/email_txt_value_tv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#4953DD"
            android:textSize="10sp"
            android:text="@string/email"/>

        <ImageView
            android:id="@+id/email_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/language_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rotationY="180"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_cl"
        android:padding="16dp"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/id_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="6dp"
            android:src="@drawable/id"
            android:background="@drawable/id_bg"/>

        <TextView
            android:id="@+id/id_txt_value_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/id_iv"
            app:layout_constraintEnd_toStartOf="@+id/id_arrow_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="#49DD89"
            android:textSize="14sp"
            android:text=""
            android:gravity="start"/>

        <TextView
            android:id="@+id/id_txt_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/id_iv"
            app:layout_constraintEnd_toStartOf="@+id/id_arrow_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/id_txt_value_tv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#717171"
            android:textSize="10sp"
            android:text="@string/branch_id"/>

        <ImageView
            android:id="@+id/id_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/language_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rotationY="180"
            android:visibility="invisible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/phone_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_cl"
        android:padding="16dp"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/phone_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="6dp"
            android:src="@drawable/phone_numbers_call"
            android:background="@drawable/lang_bg"/>

        <TextView
            android:id="@+id/phone_txt_value_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/phone_iv"
            app:layout_constraintEnd_toStartOf="@+id/phone_arrow_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="#DD8949"
            android:textSize="14sp"
            android:text=""
            android:gravity="start"/>

        <TextView
            android:id="@+id/phone_txt_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/phone_iv"
            app:layout_constraintEnd_toStartOf="@+id/phone_arrow_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/phone_txt_value_tv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#717171"
            android:textSize="10sp"
            android:text="@string/branch_phone"/>

        <ImageView
            android:id="@+id/phone_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/language_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rotationY="180"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/address_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_cl"
        android:padding="16dp"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/address_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="6dp"
            android:src="@drawable/address_icon"
            android:background="@drawable/address_bg" />

        <TextView
            android:id="@+id/address_txt_value_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/address_iv"
            app:layout_constraintEnd_toStartOf="@+id/address_arrow_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="#B149DD"
            android:textSize="14sp"
            android:text=""
            android:gravity="start"
            android:textDirection="firstStrong"/>

        <TextView
            android:id="@+id/address_txt_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/address_iv"
            app:layout_constraintEnd_toStartOf="@+id/address_arrow_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/address_txt_value_tv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#717171"
            android:textSize="10sp"
            android:text="@string/branch_address"/>

        <ImageView
            android:id="@+id/address_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/language_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rotationY="180"
            android:visibility="invisible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/terminal_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_cl"
        android:padding="16dp"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/terminal_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="6dp"
            android:src="@drawable/fi_rr_tablet"
            android:background="@drawable/terminal_bg"/>

        <TextView
            android:id="@+id/terminal_txt_value_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/terminal_iv"
            app:layout_constraintEnd_toStartOf="@+id/terminal_arrow_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="#DD4949"
            android:textSize="14sp"
            android:text=""
            android:gravity="start"/>

        <TextView
            android:id="@+id/terminal_txt_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/terminal_iv"
            app:layout_constraintEnd_toStartOf="@+id/terminal_arrow_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/terminal_txt_value_tv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#717171"
            android:textSize="10sp"
            android:text="@string/phone_id" />

        <ImageView
            android:id="@+id/terminal_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/language_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rotationY="180"
            android:visibility="invisible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/language_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terminal_cl"
        android:padding="16dp"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/language_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="6dp"
            android:src="@drawable/lang_icon"
            android:background="@drawable/lang_bg"/>

        <TextView
            android:id="@+id/language_txt_value_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/language_iv"
            app:layout_constraintEnd_toStartOf="@+id/language_arrow_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="#4953DD"
            android:textSize="14sp"
            android:text="@string/english_lang"
            android:gravity="start"/>

        <TextView
            android:id="@+id/language_txt_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/language_iv"
            app:layout_constraintEnd_toStartOf="@+id/language_arrow_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/language_txt_value_tv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#4953DD"
            android:textSize="10sp"
            android:text="@string/change_lang" />
        
        <ImageView
            android:id="@+id/language_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/language_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rotationY="180"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/change_password_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/language_cl"
        android:padding="16dp"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/change_password_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="6dp"
            android:src="@drawable/change_pass_icon"
            android:background="@drawable/change_pass_bg"/>

        <TextView
            android:id="@+id/change_password_txt_value_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/change_password_iv"
            app:layout_constraintEnd_toStartOf="@+id/change_password_arrow_iv"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="#00C0DE"
            android:textSize="14sp"
            android:text="@string/change_password"/>

        <ImageView
            android:id="@+id/change_password_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/language_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rotationY="180"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logout_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_password_cl"
        android:padding="16dp"
        android:layout_marginTop="4dp"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/logout_icon_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/logout_icon"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/logout_icon_iv"
            android:layout_marginStart="16dp"
            android:text="@string/logout"
            android:textColor="#000000"
            android:textSize="16sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>