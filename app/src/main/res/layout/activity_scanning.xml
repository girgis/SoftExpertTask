<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".features.scanning.ScanningActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/barcode_scanner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_1"
        android:animateLayoutChanges="true"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_cl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_1"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/barcode_scanning_ll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:background="@drawable/top_corner_rounded"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/barcode_check"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/barcode_scanning"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/barcode_scanning_hint"
                android:textSize="14sp"
                android:textColor="#A2A2A2"
                android:layout_marginTop="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_button_bg"
                android:textColor="@android:color/white"
                android:text="@string/barcode_scanning_now"
                android:textSize="16sp"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/products_list_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/search_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/all_corner_rounded"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="21dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/blue_im"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/blue_rectangle"
                        android:src="@drawable/white_plus"
                        android:padding="9dp"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"/>

                    <EditText
                        android:id="@+id/search_by_barcode_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="3dp"
                        android:layout_toStartOf="@+id/blue_im"
                        android:layout_toEndOf="@+id/search_img"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/search_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/icon_search"
                        android:padding="9dp"
                        android:layout_alignParentStart="true"/>

                </RelativeLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/scanning_recycleView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/search_ll"
                app:layout_constraintBottom_toTopOf="@+id/discount_cl"
                android:layout_margin="24dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/discount_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/total_products_key_tv"
                android:background="@drawable/item_quanitiy_bg"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:padding="1dp">

                <Button
                    android:id="@+id/activate_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="#0DEC75"
                    android:text="@string/activate"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/activate_et"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/activate_btn"
                    android:background="#F7F7F7"
                    app:layout_constraintTop_toTopOf="@+id/activate_btn"
                    app:layout_constraintBottom_toBottomOf="@+id/activate_btn"
                    android:textColor="#919191"
                    android:textColorHint="#919191"
                    android:textSize="16sp"
                    android:hint="@string/discount_code"
                    android:padding="12dp"
                    android:lines="1"
                    android:maxLines="1"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/total_products_key_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/total_price_key_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="30dp"
                android:text="@string/total_products"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/total_products_value_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/total_products_key_tv"
                app:layout_constraintTop_toTopOf="@+id/total_products_key_tv"
                app:layout_constraintBottom_toBottomOf="@+id/total_products_key_tv"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="30dp"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                android:gravity="center_vertical|left" />

            <TextView
                android:id="@+id/total_price_key_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/buy_bun_ll"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="30dp"
                android:text="@string/price_key_list"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/total_price_value_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/total_price_key_tv"
                app:layout_constraintTop_toTopOf="@+id/total_price_key_tv"
                app:layout_constraintBottom_toBottomOf="@+id/total_price_key_tv"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="30dp"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                android:gravity="center_vertical|left" />

            <LinearLayout
                android:id="@+id/buy_bun_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/top_corner_rounded">

                <Button
                    android:id="@+id/buy_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_bg"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/buy"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading_ll_scan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/loading_layout"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>