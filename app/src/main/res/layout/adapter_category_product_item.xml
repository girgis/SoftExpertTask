<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp">

    <LinearLayout
        android:id="@+id/catImage_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/item_quanitiy_bg"
        android:gravity="center_vertical"
        android:padding="1dp">

        <ImageView
            android:id="@+id/catImage_iv"
            android:layout_width="120dp"
            android:layout_height="120dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/productName_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/catImage_ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:text="@string/price_key_list"
        android:textColor="#090909"
        android:textSize="14sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/productQuantity_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/productName_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:text="0"
        android:textColor="#090909"
        android:textSize="14sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/productQuantityType_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/productName_tv"
        app:layout_constraintEnd_toStartOf="@+id/productQuantity_tv"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="0"
        android:textColor="#F38E36"
        android:textSize="14sp"
        android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>